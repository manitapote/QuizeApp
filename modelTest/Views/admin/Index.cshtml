@model modelTest.ViewModel.QsnGreSat
@using modelTest.ViewModel
@using modelTest.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}

@section js{
    <script src="~/Scripts/admin.js" type="text/javascript"></script>}

@section Styles{<link href="@Url.Content("~/Content/Admin.css")" rel="stylesheet" type="text/css" />}

<div id="CenterPart_admin">
    @if (Convert.ToBoolean(Session["adminLoggedIn"])==false)
    { 
    <div id="myModal" class="modal">
        <!-- Modal content -->
        <div class="modal-content">
            <div><label>User Name</label><input type="text" id="userName" name="userName" /></div>
            <div><label>Password</label><input type="password" id="pswrd" name="password" /></div>
            <input type="button" id="AdminLogin" name="login" value="Login" />
            <div id="IncorrectMsg"></div>
        </div>
    </div>
    }
    <div id="radio">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)        
        <h2>Select the test:</h2>
        @Html.RadioButton("genre", "GRE", new { @checked = true, @id = "genre_gre", @class = "genre" }) GRE
        @Html.RadioButton("genre", "SAT", new { @id = "genre_sat", @class = "genre" }) SAT
    </div>
    <div id="CRUD_btn">
        <a href="/admin/Add"> <input type="button" class="btn btn-warning" id="add" name="btn_add" value="ADD" /></a>
        <a href="/person/Details"><input type="button" id="userDetail" name="btn_viewDetail" class="btn btn-info" value="User Detail" /></a>
    </div>
        <div id="tbl_gre">
            <table class="table table-striped table-hover " id="tblgre">
                <tr class="active">
                    <td>QsnID</td>
                    <td>Qsn</td>
                    <td>OptionA</td>
                    <td>OptionB</td>
                    <td>OptionC</td>
                    <td>OptionD</td>
                    <td>Details</td>
                    <td>Correct Ans</td>
                    <td>DeleteBtn</td>
                    <td>EditBtn</td>`
                </tr>
                @{ int i = 1;
                 foreach (questionGRE p in @Model.questionGRE)
                 {
                    <tr class="active">
                        <td>@i</td>
                        <td>@p.Qsn</td>
                        <td>@p.OptionA</td>
                        <td>@p.OptionB</td>
                        <td>@p.OptionC</td>
                        <td>@p.OptionD</td>
                        <td>@p.Detail</td>
                        <td>@p.CorrectAs</td>
                        <td><input type="button" name="tblDelete_btn" class="deleteButton btn btn-danger" qid=@p.QsnID value="Delete" /></td>
                        <td class="edit_a"><input type="button" name="tblEdit_btn" class="editButton btn btn-warning" qid=@p.QsnID value="Edit" /></td>
                    </tr>
                     i = i + 1;
                 }
                }

            </table>
        </div>
        <div id="tbl_sat">
            <table class="table table-striped table-hover" id="tblsat">
                <tr class="active">
                    <td>QsnID</td>
                    <td>Qsn</td>
                    <td>OptionA</td>
                    <td>OptionB</td>
                    <td>OptionC</td>
                    <td>OptionD</td>
                    <td>OtionE</td>
                    <td>Details</td>
                    <td>Correct Ans</td>
                    <td>DeleteBtn</td>
                    <td>EditBtn</td>
                </tr>
                @{i = 1;
                foreach (questionSAT q in @Model.questionSAT)
                {
                    <tr class="active">
                        <td>@i</td>
                        <td>@q.Qsn</td>
                        <td>@q.OptionA</td>
                        <td>@q.OptionB</td>
                        <td>@q.OptionC</td>
                        <td>@q.OptionD</td>
                        <td>@q.OptionE</td>
                        <td>@q.Detail</td>
                        <td>@q.CorrectAs</td>
                        <td><input type="button" name="tblDelete_btn" class="deleteButton btn btn-danger" qid=@q.QsnID value="Delete" /></td>
                        <td class="edit_a"><input type="button" name="tblEdit_btn" class="editButton btn btn-warning" qid=@q.QsnID value="Edit" /></td>
                    </tr>
                    i = i + 1;
                }
                }
            </table>
        </div>
        <div id="comment"></div>
    </div>