@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Add";
}


<div id="CenterPart">
    @using (Html.BeginForm("Add", "admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.Hidden("admin_choice", @Convert.ToString(Session["admin_choice"]));
            <h2>Add questions to @Convert.ToString(Session["admin_choice"]) section</h2>
            <div class="form-group">
                <label class="col-lg-2 control-label mc">Question</label>
                <div class="col-lg-10 mc">
                    <textarea class="form-control" rows="3" name="Qsn" required="required"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label mc">OptionA</label>
                <div class="col-lg-10 mc">
                    <textarea class="form-control" rows="3" name="OptionA" required="required"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label mc">OptionB</label>
                <div class="col-lg-10 mc">
                    <textarea class="form-control" rows="3" name="OptionB" required="required"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label mc">OptionC</label>
                <div class="col-lg-10 mc">
                    <textarea class="form-control" rows="3" name="OptionC" required="required"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label mc">OptionD</label>
                <div class="col-lg-10 mc">
                    <textarea class="form-control" rows="3" name="OptionD" required="required"></textarea>
                </div>
            </div>

            @if (Convert.ToString(Session["admin_choice"]) == "SAT")
            {
                <div class="form-group">
                    <label class="col-lg-2 control-label mc">OptionE</label>
                    <div class="col-lg-10 mc">
                        <textarea class="form-control" rows="3" name="OptionE" required="required"></textarea>
                    </div>
                </div>
            }
            <div class="form-group">
                <label class="col-lg-2 control-label">Correct Ans</label>
                <div class="col-lg-10">
                    <div class="radio">
                        <label>
                            <input type="radio" name="CorrectAs" value="OptionA" checked />OptionA
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="CorrectAs" value="OptionB">OptionB
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="CorrectAs" value="OptionC">OptionC
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="CorrectAs" value="OptionD">OptionD
                        </label>
                    </div>
                    @if (Convert.ToString(ViewData["admin_choice"]) == "SAT")
                    {
                        <div class="radio">
                            <label>
                                <input type="radio" name="CorrectAs" value="OptionE" />OptionE
                            </label>
                        </div>
                    }
                </div>
            </div>
            <div class="form-group">
                <label for="textArea" class="col-lg-2 control-label mc">Details:</label>
                <div class="col-lg-10">
                    <textarea class="form-control" rows="3" name="Detail" required="required"></textarea>
                </div>
            </div>
            <div class="col-lg-6 col-lg-offset-2 mc">
                <input type="submit" class="btn btn-success" name="Add_btn" value="Add" />
            </div>
        </div>
    }
</div>