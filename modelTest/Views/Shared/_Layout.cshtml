<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", false)
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/SharedCSS.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="nav navbar-nav"> </div>
            <div class="floatright">
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">                                          
                        @if (Session["userId"] != null)
                        {                            
                            <li>@Html.ActionLink("Home", "Welcome", "person")</li>
                            <li>@Html.ActionLink(@Session["userName"].ToString(), "Welcome", "person")</li>
                            <li>@Html.ActionLink("SignOut", "SignOut", "person")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Home", "Index", "person")</li>
                            <li>@Html.ActionLink("SignIn", "SignIn", "person")</li>
                            <li>@Html.ActionLink("SignUp", "SignUp", "person")</li>
                        }
                        @if (Convert.ToBoolean(Session["adminLoggedIn"])==true)
                        {
                            <li>@Html.ActionLink("AdminSignOut", "AdminSignOut", "admin")</li>
                        }

                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer></footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("js", false)
</body>
</html>
