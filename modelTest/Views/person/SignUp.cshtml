@model modelTest.Models.person

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "SignUp";
}

<div id="CenterPart">
    @using (Html.BeginForm("SignUp", "person", FormMethod.Post, new { @class = "form-horizontal" }))
    {        
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true,"",new { @class = "text-danger" })
        <fieldset>
            <legend>SignUp</legend>
            <div class="form-group">
                @Html.Label("First Name", new { @class = "col-lg-4 control-label" })
                <div class="col-lg-8">
                    @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Last Name", new { @class = "col-lg-4 control-label" })
                <div class="col-lg-8">
                    @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Gender", new { @class = "col-lg-4 control-label" })
                <div class="col-lg-8">
                    <div class="dropdown">
                        @Html.DropDownList("Gender", new List<SelectListItem>{
                        new SelectListItem { Text="Female", Value="Female"},
                    new SelectListItem{Text="Male",Value="Male"}})
                        @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger"})
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Email", new { @class = "col-lg-4 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Password", new { @class = "col-lg-4 control-label" })
                <div class="col-md-8">
                    @Html.Password("password", "", new { id = "password", Textmode = "Password", @class = "form-control", required="required" })
                    @Html.ValidationMessageFor(model => model.passwrd, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Confirm Password", new { @class = "col-lg-4 control-label" })
                <div class="coll-md-8">
                    @Html.Password("confirm_password", "", new { id = "confirm_password", Textmode = "Password", @class = "form-control", required = "required" })
                    @Html.ValidationMessage("confirm_password", "Confirm Password", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Test", new { @class = "col-lg-4 control-label" })
                <div class="col-md-8">
                    <div class="dropdown">
                        @Html.DropDownList("Test", new List<SelectListItem>{
                        new SelectListItem { Text="GRE", Value="GRE"},
                        new SelectListItem{Text="SAT",Value="SAT"}})
                        @Html.ValidationMessageFor(model => model.Test, "", new { @class = "text-danger", required = "required" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-8 col-lg-offset-4">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </fieldset>
    }
</div>
